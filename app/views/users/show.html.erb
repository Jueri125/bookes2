<%= flash[:notice] %>

<div class="container">
  <div class="row">
   <div class="col-md-3">
    <%= render 'user', post_images: @user %>
   </div>
   <div class="col-md-8 offset-md-1">
    <table class="table">
     <h1>Books</h1>
     <thead>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
     </thead>
     <% @books.each do |book| %>
     <tr>
       <td>
       <%= link_to user_path(book.user.id) do %>
        <%= image_tag @user.get_profile_image(80,80) %>
       <% end %>
       </td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
     </tr>
     <% end %>
    </table>
   </div>
 </div>
</div>
