<!DOCTYPE html>
<html>
  <head>
    <title>Books2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/990dc26cec.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
        <div class= "container">
            <a class="h-books" href="/" style="color: #ffffff;">Bookers</a>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
         <% if user_signed_in? %>


           <li class="nav-item">
           <%= link_to(user_path(current_user), class: 'nav-link text-light') do %>
            <i class="fa-solid fa-house" style="color: #ffffff;"></i>
             Home
             <% end %>
            </li>

           <li class="nav-item">
             <%= link_to(users_path, class: 'nav-link text-light') do %>
             <i class="fa-solid fa-users" style="color: #ffffff;"></i>
             Users
             <% end %>
           </li>

           <li class="nav-item">
             <%= link_to(books_path, class: 'nav-link text-light') do %>
             <i class="fa-solid fa-book-open" style="color: #ffffff;"></i>
             Books
             <% end %>
           </li>

           <li class="nav-item">
             <%= link_to(destroy_user_session_path, method: :delete, class: 'nav-link text-light') do %>
             <i class="fa-solid fa-right-from-bracket" style="color: #ffffff;" ></i>
             Log out
             <% end %>
           </li>

        <% else %>
           <li class="nav-item">
             <%= link_to(root_path, class: 'nav-link text-light') do %>
             <i class="fa-solid fa-house" style="color: #ffffff;"></i>
             Home
             <% end %>
           </li>

           <li class="nav-item">
             <%= link_to(about_path, class: 'nav-link text-light') do %>
             <i class="fa-solid fa-link" style="color: #ffffff;"></i>
             About
             <% end %>
           </li>

           <li class="nav-item">
             <%= link_to(new_user_registration_path, class: 'nav-link text-light') do %>
             <i class="fa-solid fa-user-plus" style="color: #ffffff;"></i>
             Sign up
             <% end %>
           </li>

           <li class="nav-item">
             <%= link_to(new_user_session_path, class: 'nav-link text-light') do %>
             <i class="fa-solid fa-right-to-bracket"  style="color: #ffffff;" ></i>
             Log in
             <% end %>
           </li>

          <% end %>
         </ul>

          </div>
         </div>
        </nav>
    </header>
     <%= yield %>
    <footer>
      <div class="class="container mt-5"">
          <div class="row">
              <div class="mx-auto">
                CopyRight Infratop.inc
              </div>
          </div>
      </div>
    </footer>
  </body>


</html>
